{
  "name": "tum-live",
  "version": "1.0.0",
  "description": "Backend of TUMs live streaming service",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joschahenningsen/TUM-Live.git"
  },
  "scripts": {
    "postinstall": "npm run build && npm run tailwind-compile",
    "tailwind-compile": "NODE_ENV=production npx tailwindcss build -i assets/css/main.css --minify -o ./assets/css-dist/main.css",
    "lint": "eslint . --ext .ts,.tsx",
    "lint-fix": "eslint . --ext .ts,.tsx --quiet --fix",
    "build": "webpack --config webpack.prod.js",
    "build-dev": "webpack --config webpack.dev.js & npx tailwindcss build -i assets/css/main.css -o ./assets/css-dist/main.css --watch"
  },
  "author": "Joscha Henningsen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joschahenningsen/TUM-Live/issues"
  },
  "homepage": "https://github.com/joschahenningsen/TUM-Live#readme",
  "dependencies": {
    "@alpinejs/focus": "^3.10.5",
    "@alpinejs/persist": "^3.10.5",
    "@fortawesome/fontawesome-free": "^6.2.1",
    "@fullcalendar/core": "^5.11.3",
    "@fullcalendar/daygrid": "^5.11.3",
    "@fullcalendar/icalendar": "^5.11.3",
    "@fullcalendar/list": "^5.11.3",
    "@fullcalendar/timegrid": "^5.11.3",
    "@silvermine/videojs-airplay": "^1.1.0",
    "@silvermine/videojs-quality-selector": "^1.2.5",
    "alpinejs": "^3.10.5",
    "chart.js": "^4.0.1",
    "extract-loader": "^5.1.0",
    "flatpickr": "^4.6.13",
    "fullcalendar": "^5.11.3",
    "handlebars": "^4.7.7",
    "handlebars-loader": "^1.7.2",
    "http-status-codes": "^2.2.0",
    "ical.js": "^1.5.0",
    "katex": "^0.16.3",
    "mini-css-extract-plugin": "^2.7.1",
    "moment": "^2.29.4",
    "nouislider": "^15.6.1",
    "video.js": "^7.20.3",
    "videojs-contrib-quality-levels": "^2.2.1",
    "videojs-seek-buttons": "^3.0.1",
    "videojs-sprite-thumbnails": "^0.6.0"
  },
  "devDependencies": {
    "@types/video.js": "^7.3.50",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "autoprefixer": "^10.4.13",
    "css-loader": "^6.7.3",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lodash": "^4.17.21",
    "postcss": "^8.4.19",
    "prettier": "^2.8.0",
    "tailwindcss": "^3.2.4",
    "top-twitter-emojis-map": "^1.0.3",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^5.0.0"
  }
}
